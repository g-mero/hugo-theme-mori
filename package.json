{
  "name": "hugo-theme-mori",
  "private": "true",
  "description": "only for scripts",
  "version": "0.2.2",
  "type": "module",
  "scripts": {
    "dev": "pnpm run dev:copy-config && concurrently -k -n \"UNOCSS,CSS,JS,HUGO\" -c \"white,gray,blue,green\" \"pnpm:unocss:watch\" \"pnpm:dev:css\" \"pnpm:dev:js\" \"pnpm:serve\"",
    "dev:copy-config": "node scripts/copy-config.ts",
    "serve": "hugo server -s exampleSite --gc --cleanDestinationDir --themesDir ../..",
    "build:css": "unocss && node scripts/build-css.ts",
    "build:js": "node scripts/build-js.ts",
    "unocss:watch": "unocss --watch",
    "dev:css": "node scripts/build-css.ts dev watch",
    "dev:js": "node scripts/build-js.ts dev",
    "bump": "bumpp --execute \"pnpm i\" --no-push",
    "prepare": "husky"
  },
  "keywords": [],
  "engines": {
    "node": ">=24"
  },
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.22.0",
  "browserslist": [
    "> 0.1% and fully supports css-variables"
  ],
  "devDependencies": {
    "@types/node": "^24.10.12",
    "@unocss/cli": "66.5.9",
    "unocss": "66.5.9",
    "browserslist": "^4.28.0",
    "chokidar": "^5.0.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lightningcss": "^1.30.2",
    "lint-staged": "^16.2.7",
    "sass-embedded": "^1.97.2",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "bumpp": "^10.3.2"
  },
  "lint-staged": {
    "{assets/css/**/*.{scss,css},layouts/**/*.html,unocss.config.ts}": [
      "pnpm build:css",
      "git add assets/css/compiled/*.css"
    ],
    "assets/js/**/*.{ts,js}": [
      "pnpm build:js",
      "git add assets/js/compiled/*.js"
    ]
  }
}
